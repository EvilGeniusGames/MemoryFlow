<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MemoryFlow.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:md="clr-namespace:Markdown.Avalonia;assembly=Markdown.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MemoryFlow.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Width="1200" Height="800"
        WindowStartupLocation="CenterScreen"
        Title="MemoryFlow: Version 0.0.0 Release: 0.1 Alpha">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<!-- Menu -->
			<RowDefinition Height="*" />
			<!-- Content -->
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<!-- Design-time ViewModel -->
		<Design.DataContext>
			<vm:MainWindowViewModel />
		</Design.DataContext>

		<!-- Menu -->
		<Menu Grid.Row="0">
			<MenuItem Header="File" />
			<MenuItem Header="Edit" />
			<MenuItem Header="View" />
			<MenuItem Header="Help" />
		</Menu>

		<!-- Content Grid with 3 named columns -->
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<!-- Left Column -->
				<ColumnDefinition Width="250" MinWidth="150" />
				<!-- Splitter -->
				<ColumnDefinition Width="Auto" />
				<!-- Center Column -->
				<ColumnDefinition Width="*" />
				<!-- Splitter -->
				<ColumnDefinition Width="Auto" />
				<!-- Right Column -->
				<ColumnDefinition Width="250" MinWidth="150" />
			</Grid.ColumnDefinitions>


			<!-- Left Column -->
			<StackPanel Grid.Column="0" Margin="5">
				<TextBlock Text="Conversations" FontWeight="Bold" Margin="0,0,0,5" />
				<StackPanel Orientation="Horizontal" Margin="0,0,0,5" Spacing="5">
					<Button Content="Add" />
					<Button Content="Edit" />
					<Button Content="Delete" />
				</StackPanel>
				<TreeView />
			</StackPanel>

			<!-- Splitter between left and center -->
			<GridSplitter Grid.Column="1"
						  Width="2"
						  ResizeDirection="Columns"
						  ShowsPreview="True"
						  Background="Transparent"/>

			<!-- Center Column -->
			<Grid Grid.Column="2" Margin="5">
				<Grid.RowDefinitions>
					<RowDefinition Height="*" />
					<!-- Chat Tabs -->
					<RowDefinition Height="Auto" />
					<!-- Chat Entry -->
				</Grid.RowDefinitions>

				<!-- Conversation Tabs -->
				<TabControl Grid.Row="0">
					<TabItem Header="Topic 1">
						<md:MarkdownScrollViewer Markdown="{Binding ActiveMarkdown}" />
					</TabItem>
					<TabItem Header="Topic 2" />
				</TabControl>

				<!-- Chat Entry Panel -->
				<StackPanel Grid.Row="1" Margin="0,10,0,0">
					<TextBlock Text="Enter your message:" Margin="0,0,0,5" />
					<TextBox AcceptsReturn="True"
							 Height="100"
							 Watermark="Type your message here..."
							 TextWrapping="Wrap"
							 HorizontalAlignment="Stretch" />

					<!-- Future: attachments area -->
					<StackPanel Orientation="Horizontal" Margin="0,5,0,0" Spacing="10">
						<Button Content="+" IsEnabled="False" FontSize="10" FontWeight="Bold" />
					</StackPanel>
				</StackPanel>
			</Grid>

			<!-- Splitter between center and right -->
			<GridSplitter Grid.Column="3"
						  Width="2"
						  ResizeDirection="Columns"
						  ShowsPreview="True"
						  Background="Transparent"/>

			<!-- Right Column -->
			<StackPanel Grid.Column="4" Margin="5">
				<TextBlock Text="Files and folders" FontWeight="Bold" Margin="0,0,0,5" />
				<TreeView />
			</StackPanel>
		</Grid>
	</Grid>
</Window>
